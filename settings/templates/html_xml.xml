<templateSet group="html/xml">
  <template name="ii" value="&lt;$TAG$&gt;$SELECTION$&lt;/$TAGNAME$&gt;" description="Surround with &lt;tag&gt;&lt;/tag&gt; in HTML/PHP" toReformat="false" toShortenFQNames="false">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="&quot;&quot;" alwaysStopAt="false" />
    <context>
      <option name="HTML" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="XML" value="true" />
    </context>
  </template>
  <template name="CD" value="&lt;![CDATA[&#10;$SELECTION$&#10;]]&gt;" description="Surround with CDATA section" toReformat="false" toShortenFQNames="false">
    <context>
      <option name="COMPLETION" value="false" />
      <option name="CSS" value="true" />
      <option name="CSS_DECLARATION_BLOCK" value="true" />
      <option name="CSS_PROPERTY_VALUE" value="true" />
      <option name="CSS_RULESET_LIST" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="JSON" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="JS_EXPRESSION" value="true" />
      <option name="JS_STATEMENT" value="true" />
      <option name="OTHER" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Comment" value="true" />
      <option name="PHP String Literal" value="true" />
      <option name="TypeScript" value="true" />
      <option name="XML" value="true" />
      <option name="XSL_TEXT" value="true" />
    </context>
  </template>
</templateSet>